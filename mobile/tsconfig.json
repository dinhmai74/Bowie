{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es2019",
    "lib": ["es7"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./app",
    "paths": {
      "app-graphql": ["./graphql"],
      "app-graphql/*": ["./graphql/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "app", "test", "storybook"]
}
